<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="editstyle" parent="AppTheme">
        <item name="android:layout_width">@dimen/edittextwidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number|numberSigned|numberDecimal</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">5</item>
        <item name="android:selectAllOnFocus">true</item>


    </style>

    <style name="textviewstyle" parent="AppTheme">
        <item name="android:layout_width">@dimen/textviewwidth</item>
        <item name="android:layout_height">@dimen/edittextht</item>
        <item name="android:layout_marginTop">8dip</item>
    </style>


</resources>
